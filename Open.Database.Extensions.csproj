<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>electricessence</Authors>
    <Company />
    <Product />
    <PackageLicenseUrl>https://github.com/electricessence/Open.Database.Extensions/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/electricessence/Open.Database.Extensions</PackageProjectUrl>
    <Description>Useful set of utilities and abstractions for simplifying modern database operations and ensuring DI compatibility.</Description>
    <RepositoryUrl>https://github.com/electricessence/Open.Database.Extensions</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Version>5.7.0</Version>
    <AssemblyVersion>5.7.0.0</AssemblyVersion>
    <FileVersion>5.7.0.0</FileVersion>
    <PackageReleaseNotes>Updated transaction methods be more controllable and explicit.  Always passing the connection as a parameter for the handler allows for static handler methods.

Added cancellation tokens to all applicable extensions.</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>Documentation.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>docs\Documentation.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="api\**" />
    <Compile Remove="docs\**" />
    <EmbeddedResource Remove="api\**" />
    <EmbeddedResource Remove="docs\**" />
    <None Remove="api\**" />
    <None Remove="docs\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove=".gitignore" />
    <None Remove="LICENSE" />
    <None Remove="README.md" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Data.SqlClient" Version="4.4.3" />
    <PackageReference Include="System.Threading.Tasks.Dataflow" Version="4.8.0" />
  </ItemGroup>

</Project>
